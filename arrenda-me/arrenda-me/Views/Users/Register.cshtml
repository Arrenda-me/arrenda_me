
@{
    ViewBag.Title = "Registar utilizador";
}
<link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
<body style="margin-top:15%">
    <div align="center">
        @using (Html.BeginForm("Register", "Users"))
        {
            <div style="width: 20%; font-weight: bold;" class="form-group">
                <label style=" color:#A63800; margin-left:-85%">Email:</label>
                @Html.TextBox("email", null, new { @class = "form-control"})

            </div>

            <div style="width: 20%; font-weight: bold;" class="form-group">
                <label style="color: #A63800; margin-left: -75%;">Contacto:</label>
                @Html.TextBox("contact", null, new { @class = "form-control" })

            </div>

            <div style="width: 20%; font-weight: bold;" class="form-group">
                <label style="color: #A63800; margin-left: -73%;">Password:</label>
                @Html.Password("password", null, new { @class = "form-control"})

            </div>

            <div style="width: 20%; font-weight: bold;" class="form-group">
                <label style="color: #A63800; margin-left: -50%;">Repetir password:</label>
                @Html.Password("password2", null, new { @class = "form-control" })

            </div>

            <div>
                <input class="btn btn-warning" type="submit" value="Registar" />&ensp;&ensp;
            </div>
        }
    </div>
</body>

