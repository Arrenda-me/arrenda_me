
@{
    ViewBag.Title = "ViewAnouncement";
}

<!DOCTYPE html>
<link href="~/Content/Site.css" rel="stylesheet" type="text/css" />

<script type='text/javascript' src="http://imsky.github.io/holder/holder.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $('.carousel').carousel()
    });
</script>

<body class="bodyViewAnouncement">
    <h2 class="titleLocation">Os meus anúncios</h2>
    <br />
    <div>
        <div id="carousel-example-generic" class="carousel slide" style="width: 20%; float: left; height:10%">
            <!-- Indicators -->
            <ol class="carousel-indicators">
                <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
                <li data-target="#carousel-example-generic" data-slide-to="1"></li>
                <li data-target="#carousel-example-generic" data-slide-to="2"></li>
            </ol>
            <!-- Wrapper for slides -->
            <div class="carousel-inner">
                <div class="item active">
                    <img src="~/content/images/imovel.jpg" />
                </div>
                <div class="item">
                    <img src="~/content/images/imovel.jpg" />
                </div>
                <div class="item">
                    <img src="~/content/images/imovel.jpg" />
                </div>
            </div>

            <!-- Controls -->
            <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
                <span class="icon-prev"></span>
            </a>
            <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
                <span class="icon-next"></span>
            </a>
        </div>
        <p style=" margin-left: 26%" class="typologyLocation">Tipologia, Localidade</p>
        <div style="margin-top:3%; margin-left:25%">
            <button type="button" class=" btn btn-success fileinput-button">
                <i class="glyphicon glyphicon-pencil"></i>
                <span>Editar</span>
            </button>
            <button type="button" class="btn btn-danger delete">
                <i class="glyphicon glyphicon-trash"></i>
                <span>Remover</span>
            </button>
        </div>
    </div>


