@model string
@{
    ViewBag.Title = "Painel de utilizador";
}

<h2 style="margin-top:100px">Painel de utilizador</h2>

<table >
    <tr>
        <td>
            <div style="border-color:black; border-width:2px; border:solid; width:150px; padding:20px">
                Anúncios
                <br /><br />
                <input type="button" class="btn btn-warning" value="Novo Anúncio" onclick="location.href = '@Url.Action("ViewProperty", "Property")'" />
                <br /><br />
                <input type="button" class="btn btn-warning" value="Ver Anúncios" onclick="location.href = '@Url.Action("ListProperties", "Property")'" />
                <br /><br />
            </div>

        </td>

        <td>

            <div style="border-color:black; border-width:2px; border:solid; width:400px; padding:20px">
                Dados Pessoais 
                <br /><br />

                <div style="width: 19.5%; font-weight: bold;" class="form-group">
                    <label style=" color:#A63800" for="exampleInputEmail1">Email</label>
                    <h1>@Model</h1>
                    
                    

                    @using (Html.BeginForm("UserPanel", "Users"))
                    {
                        <br />
                        <br />
                        <div style="font-weight: bold;" class="form-group">
                            <label style=" color:#A63800" for="exampleInputEmail1">Novo Email</label>
                            @Html.TextBox("newEmail")

                        </div>
                        <div style="font-weight: bold;" class="form-group">
                            <label style=" color:#A63800" for="exampleInputPassword1">Nova Password</label>
                            @Html.Password("password")

                        </div>


                        <div style="font-weight: bold;" class="form-group">
                            <label style=" color:#A63800" for="exampleInputPassword1">Repetir Nova Password</label>
                            @Html.Password("password2")

                        </div>


                        <div>
                            <input class="btn btn-warning" type="submit" value="Gravar alterações" />&ensp;&ensp;

                        </div>
                    }

                  <br /><br />
                </div>
                </div>

        </td>
    </tr>
</table>



